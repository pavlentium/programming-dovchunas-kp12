        <Button x:Name="btn2" Content="Хрестики-нулики" HorizontalAlignment="Left" Height="47" Margin="100,180,0,0" VerticalAlignment="Top" Width="171" Background="#FFBFF0F3" FontSize="18" Foreground="#FF23595A" Click="btn2_Click" Cursor="Hand"/>
        <Button x:Name="btn3" Content="Калькулятор" HorizontalAlignment="Left" Height="47" Margin="100,245,0,0" VerticalAlignment="Top" Width="171" Background="#FFBFF0F3" FontSize="18" Foreground="#FF23595A" Click="btn3_Click" Cursor="Hand"/>
        <Button x:Name="btn4" Content="Автор" HorizontalAlignment="Left" Height="47" Margin="100,310,0,0" VerticalAlignment="Top" Width="171" Background="#FFBFF0F3" FontSize="18" Foreground="#FF23595A" Click="btn4_Click" Cursor="Hand"/>
        <Button x:Name="btn5" Content="Вихід" HorizontalAlignment="Left" Height="30" Margin="601,340,0,0" VerticalAlignment="Top" Width="100" Background="#FFBFF0F3" FontSize="18" Foreground="#FF23595A" Click="btn5_Click" Cursor="Hand"/>

    </Grid>
</Window>
